{
  "name": "canary-aws-ping",
  "version": "1.0.1",
  "description": "AWS Lambda with API Gateway canary deployments for ping service",
  "main": "src/handlers/ping.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "jest",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:canary": "serverless deploy --stage prod --canary",
    "promote:canary": "serverless promote --stage prod",
    "rollback": "serverless rollback --stage prod",
    "local:start": "docker-compose up -d",
    "local:stop": "docker-compose down",
    "local:deploy": "serverless deploy --stage local"
  },
  "dependencies": {},
  "devDependencies": {
    "serverless": "^3.16.0",
    "serverless-localstack": "^1.2.0",
    "jest": "^29.0.0"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "canary",
    "api-gateway",
    "nodejs"
  ],
  "author": "Antonio",
  "license": "MIT"
}